<div class="container mt-5 p-5 d-flex flex-column align-items-center">
  <h1 class="text-center"><strong>Watch List</strong></h1>
    <div class="row w-100">
  <div class="col-8 m-5 w-100">
    <ul class="list-group">
      <% @movies.each do |movie|%>
      <li class="list-group-item">
          <%= link_to movie.title, movie_path(movie), class: "text-decoration-none"%>
      </li>
      <% end %>
    </ul>
    <br>
  </div>
  </div>
  <%= link_to "Add Movie", new_movie_path, class: "btn btn-primary"%>
  </div>
